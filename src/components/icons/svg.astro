---
import { cn } from '@/lib/utils';

export interface Props {
  className?: string;
}
const { className = '' } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  stroke-width="1.5"
  stroke="currentColor"
  fill="none"
  stroke-linecap="round"
  stroke-linejoin="round"
  class={cn('w-6 h-6', className)}
>
  <slot />
</svg>
