---
import { cn } from '@/lib/utils';
const { className, isIcon, asChild, href, ...rest } = Astro.props;
const Tag = asChild ? 'a' : 'button';
---

<Tag
  class={cn(
    'hover:bg-muted-foreground/10 dark:hover:bg-muted-foreground/30 focus-visible:ring-ring inline-flex items-center justify-center gap-3 whitespace-nowrap rounded-md text-sm font-medium transition-colors duration-200 ease-in-out focus-visible:outline-none focus-visible:ring-1 disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:shrink-0',
    isIcon && 'h-9 w-9',
    className,
  )}
  {...rest}
  {...Tag === 'a' && { href }}
>
  <slot />
</Tag>
